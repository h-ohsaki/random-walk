import random
import sys
import os

from perlcompat import die, warn, getopts
import graph_tools
import randwalk
import tbdump

def usage():
    die(f"""\
usage: {sys.argv[0]} [-s #] [-n #] [-k #]
  -s #      seed of random number generator
  -n #      the number of vertices (default: 100)
  -k #      average degree (default: 3)
  -t type   type of graph (random/barandom)
  -a agent  name of agent class (SRW/NBRW)
  -A #      bias parameter alpha (default: 0)
""")

def main():
    opt = getopts('s:n:k:t:a:A:') or usage()
    seed = int(opt.s) if opt.s else 1
    n_nodes = int(opt.n) if opt.n else 100
    kavg = float(opt.k) if opt.k else 3.
    graph_type = opt.t if opt.t else 'random'
    agent_cls = opt.a if opt.a else 'BiasedRW'
    alpha = float(opt.A) if opt.A else 0.

    random.seed(seed)

    # Create graph.
    g = graph_tools.Graph(directed=False)
    g = g.create_graph(graph_type, n_nodes, int(n_nodes * kavg / 2))
    # g = g.create_graph(graph_type, n_nodes)

    print("""\
palette acolor 1 .9 0 1
define agent box 15 15 acolor
priority agent 1
""")

    out = ''
    max_degree = max([g.degree(v) for v in g.vertices()])
    for v in sorted(g.vertices()):
        # NOTE: Vertices with the maximum degree are drawn with 10% height/width.
        r = max(.005, .02 * g.degree(v) / max_degree)
        out += f'define v{v} ellipse {r} {r} heat15\n'
        out += f'alpha v{v} .5\n'
    n = 1
    for u, v in sorted(g.edges()):
        out += f'define e{u}_{v} link v{u} v{v} 3 heat10\n'
        out += f'alpha e{u}_{v} .5\n'
        n += 1
    out += 'spring /^v/\n'
    out += 'display\n'
    print(out)

    # Create an agent of a given agent class.
    cls = eval('randwalk.' + agent_cls)
    agent = cls(graph=g, current=1, alpha=alpha)

    # Perform an instance of simulation.
    while agent.ncovered < n_nodes:
        u = agent.current
        agent.advance()
        # agent.dump()
        v = agent.current
        print(f'animate agent v{v}')
        print('display')

        nvisit = agent.nvisits[v]
        level = min(20 + 5 * nvisit, 100)
        print(f'color v{v} heat{level}')
        print(f'alpha v{v} .5')
        if u > v:
            u, v = v, u 
        print(f'color e{u}_{v} heat{level}')
        print(f'alpha e{u}_{v} .5')
        print('display')

if __name__ == "__main__":
    main()
